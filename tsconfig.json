{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["esnext", "dom"],

    "declaration": true,
    "declarationMap": true,

    "sourceMap": true,

    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
